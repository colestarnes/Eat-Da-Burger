<h1>Burger Time!</h1> 

<h2>On The Tray!</h2> 
 
 <ul>
     {{#each burgers}} 
     {{#unless devoured}} 
     {{> burgers/burger-block eaten=true}} 
     {{/unless}} 
     {{/each}}
 </ul>
  
<h2>Devoured!</h2> 
{{#each burgers}} 
{{#if devoured}} 
{{> burgers/burger-block }} 
{{/if}} 
{{/each}} 
</ul> 

<h2>Add a Burger</h2> 
<form class="create-form">

    <div class="form-group">
        <label for="addBtn">Burger:</label> 
        <input type="text" id="addBtn" name="burgerType">
    </div> 

    <div class="form-group">
        <label for="devoured">Devoured</label> 
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> On the Tray!
    </div>
</form> 

<button type="submit">Add Burger</button> 
</form>